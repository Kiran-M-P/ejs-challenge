<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" id="post-title" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input
      type="text"
      class="form-control"
      name="postTitle"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea
      name="postBody"
      id="post-body"
      class="form-control"
      rows="5"
      autocomplete="off"
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>
